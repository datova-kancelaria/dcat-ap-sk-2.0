{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://data.gov.sk/.../schémata/katalog.json",
	"type": "object",
	"title": "Katalog",
	"$defs": {
        "text": {
            "name": "Text",
            "type": "object",
            "description": "Vícejazyčný text",
            "anyOf": [
                {
                    "required": [
                        "sk"
                    ],
                    "properties": {
                        "sk": {
                            "type": "string",
                            "title": "Text slovensky",
                            "description": "Text slovensky",
                            "examples": [
                                "Text slovensky"
                            ]
                        }
                    }
                },
                {
                    "required": [
                        "en"
                    ],
                    "properties": {
                        "en": {
                            "type": "string",
                            "title": "Text anglicky",
                            "description": "Text anglicky",
                            "examples": [
                                "Text in English"
                            ]
                        }
                    }
                }
            ],
            "additionalProperties": {
                "type": "string"
            }
        },
        "více-textů": {
            "name": "Více textů",
            "type": "object",
            "description": "Více vícejazyčných textů",
            "anyOf": [
                {
                    "required": [
                        "sk"
                    ],
                    "properties": {
                        "sk": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "title": "Text slovensky",
                                    "description": "Text slovensky",
                                    "examples": [
                                        "Text slovensky"
                                    ]
                                },
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "title": "Text slovensky",
                                        "description": "Text slovensky",
                                        "examples": [
                                            "Text slovensky"
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                },
                {
                    "required": [
                        "en"
                    ],
                    "properties": {
                        "en": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "title": "Text anglicky",
                                    "description": "Text anglicky",
                                    "examples": [
                                        "Text in English"
                                    ]
                                },
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "title": "Text anglicky",
                                        "description": "Text anglicky",
                                        "examples": [
                                            "Text in English"
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                }
            ],
            "additionalProperties": {
                "anyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                ]
            }
        }
    },
	"required": ["typ", "iri", "název", "popis", "poskytovatel", "datová_sada"],
	"properties": {
		"typ": {
			"oneOf": [{
				"const": "Katalog"
				},{
				"type": "array",
				"contains": {
					"const": "Katalog"
				},
				"items": {
					"type": "string"
				}
			}]
		},
		"iri": {
			"type": "string",
			"format": "iri",
			"title": "Identifikátor",
			"minLength": 8,
			"pattern": "^https?://",
			"examples": [
				"https://www.trebic.cz/zdroj/aktualita/2020/dopadení-lupiče-na-francouzské-ulici"
			]
		},
		"název": {
			"$ref": "#/$defs/text"
		},
		"popis": {
			"$ref": "#/$defs/text"
		},
		"poskytovatel": {
			"type": "string",
			"format": "iri",
			"title": "Poskytovatel",
			"examples": [
				"https://rpp-opendata.egon.gov.cz/odrpp/zdroj/orgán-veřejné-moci/66003008"
			]
		},
		"kontaktní_bod": {
			"type": "object",
			"required": [ "typ" ],
			"properties": {
				"typ": {
					"type": "string",
					"examples": [ "Organizace" ]
				},
				"jméno": {
					"$ref": "#/$defs/text"
				},
				"e-mail": {
					"type": "string",
					"format": "iri",
					"pattern": "^mailto\\:",
					"examples": [
						"mailto:sekretariat.190@mdcr.cz"
					]
				}
			}
		},
		"domovská_stránka": {
			"type": "string",
			"format": "iri",
			"title": "Domovská stránka",
			"minLength": 8,
			"pattern": "^https://",
			"examples": [
				"https://data.gov.cz/"
			]
		},
		"datová_sada": {
			"type": "array",
			"items": {
				"type": "string",
				"format": "iri",
				"minLength": 8,
				"pattern": "^https://",					
				"title": "Datová sada"
			}
		}
	}
}